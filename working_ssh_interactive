import paramiko
import time
ssh = paramiko.SSHClient()

# Create instance of SSHClient object
remote_conn_pre = paramiko.SSHClient()

# Automatically add untrusted hosts (make sure okay for security policy in your environment)
remote_conn_pre.set_missing_host_key_policy(paramiko.AutoAddPolicy())

# initiate SSH connection
remote_conn_pre.connect('192.168.11.109', port=22, username='xxxxxxx', password='xxxxxxxxxxxx', look_for_keys=False, allow_agent=False)
print("SSH connection established")

# Use invoke_shell to establish an 'interactive session'
remote_conn = remote_conn_pre.invoke_shell()
print("Interactive SSH session established")

# Strip the initial router prompt
output = remote_conn.recv(1000)

# See what we have
print('First output after login')
print(output)

# Now let's try to send the router a command
remote_conn.send("\n")
remote_conn.send("mkdir test\n")

# Wait for the command to complete
time.sleep(2)

output = remote_conn.recv(5000)
print("After First command")
print(output)

# Now let's try to send the router a command
remote_conn.send("\n")
remote_conn.send("cd test\n")

# Wait for the command to complete
time.sleep(2)

output = remote_conn.recv(5000)

print('After first "cd"')
print(output)
# Now let's try to send the router a command
remote_conn.send("\n")
remote_conn.send("mkdir test\n")

# Wait for the command to complete
time.sleep(2)

output = remote_conn.recv(5000)
print("After second create dir")
print(output)

# Now let's try to send the router a command
remote_conn.send("\n")
remote_conn.send("ping 192.168.11.1 -c 10")
time.sleep(2)
remote_conn.send("\n")
time.sleep(10)
output = remote_conn.recv(5000)
print("After Ping")
print(output)
print(type(output))

